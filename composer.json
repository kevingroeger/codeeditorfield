{
    "name": "kevingroeger/codeeditorfield",
    "description": "Code editor field for SilverStripe 4 and 5",
    "type": "silverstripe-vendormodule",
    "license": "BSD-3-Clause",
    "keywords": [
        "silverstripe",
        "code",
        "editor",
        "formfield"
    ],
    "authors": [
        {
            "name": "Kevin Gr√∂ger",
            "email": "kgroeger92@gmail.com"
        }
    ],
    "extra": {
        "installer-name": "codeeditorfield",
        "expose": [
            "client"
        ]
    },
    "autoload": {
        "psr-4": {
            "KevinGroeger\\CodeEditorField\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^8.1",
        "silverstripe/vendor-plugin": "^2",
        "silverstripe/framework": "^4 || ^5"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
